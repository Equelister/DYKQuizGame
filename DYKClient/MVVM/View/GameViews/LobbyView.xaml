<UserControl x:Class="DYKClient.MVVM.View.GameViews.LobbyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DYKClient.MVVM.View.GameViews"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Purple">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <ListView Grid.ColumnSpan="8"
                  Grid.Row="4" Grid.RowSpan="4"
                  Margin="5"
                  Padding="5"
                  SelectionMode="Single"                  
                  >
            <ListViewItem Content="1. Gracz"
                          HorizontalAlignment="Center"/>
            <ListViewItem Content="1. Gracz - Gotowy"
                          HorizontalAlignment="Center"/>
            <ListViewItem Content="1. Gracz"
                          HorizontalAlignment="Center"/>
            <ListViewItem Content="1. Gracz - Gotowy"
                          HorizontalAlignment="Center"/>
            <ListViewItem Content="1. Gracz - Gotowy"
                          HorizontalAlignment="Center"/>
            <ListViewItem Content="1. Gracz - Gotowy"
                          HorizontalAlignment="Center"/>
            <ListViewItem Content="1. Gracz"
                          HorizontalAlignment="Center"/>
            <ListViewItem Content="8. Gracz"
                          HorizontalAlignment="Center"/>
        </ListView>

        <StackPanel Grid.Row="1" Grid.RowSpan="2"
                    Grid.Column="1" Grid.ColumnSpan="3"
                    Margin="0">

            <TextBlock Text="Rozpocznij grę"
                       Style="{StaticResource StandardTextBlockStyle}"/>

            <DockPanel>
                <Grid HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button Content="Zwykła" 
                            Style="{StaticResource StandardButtonStyle}"/>

                    <Button Grid.Column="1" 
                            Content="Urozmaicona"
                            Style="{StaticResource StandardButtonStyle}"/>
                </Grid>
            </DockPanel>
            
        </StackPanel>
        
        <StackPanel Grid.Row="1" Grid.RowSpan="2"
                    Grid.Column="5" Grid.ColumnSpan="2"
                    Margin="0">

            <TextBlock Text="Gotowość"
                       Style="{StaticResource StandardTextBlockStyle}"/>

            <Button Content="Gotowość"
                    Style="{StaticResource StandardButtonStyle}"/>

        </StackPanel>






    </Grid>

</UserControl>
